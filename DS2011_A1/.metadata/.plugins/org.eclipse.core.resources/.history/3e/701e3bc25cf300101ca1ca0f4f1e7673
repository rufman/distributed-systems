package edu.ch.uniz.ds2011.a1;

import java.io.IOException;
import java.io.InputStream;
import java.io.Reader;
import java.io.BufferedReader;
import java.io.InputStreamReader;
import java.io.Writer;
import java.io.StringWriter;
import java.util.ArrayList;

public class PhoneBookServer extends IPhoneBookServer {
	
	@Override
	protected ArrayList<PhoneBookRecord> loadData(InputStream dbis) {
		int data;
		String line;
		ArrayList phone_array;
		
		if (dbis != null) {
            Writer writer = new StringWriter();
            char buffer;
            
            try {
                Reader reader = new Reader(new InputStreamReader(dbis, "UTF-8"));
                int n;
                while((n = reader.read(buffer)) != -1) {
                	if(buffer == '\n'){
                		PhoneBookRecord phone_record = new PhoneBookRecord(writer.toString());
                		phone_array.add(phone_record);
                		writer.flush();
                	}
                    writer.write(buffer, 0, n);
                }
            } finally {
            	dbis.close();
            }
       }
		
		
		return null;
	}

	@Override
	public void start() {
		// Get the raw phone records from acme.txt
		AcmeLocator acme = new AcmeLocator();
		InputStream phonebook_stream = acme.getPhoneBook();
		
		loadData(phonebook_stream); //load the raw phone records into the PhoneBook
		
	}

}
